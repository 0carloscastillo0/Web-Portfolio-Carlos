generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String
  lastname String
  email String @unique
  title String
  city String
  country String
  description String
  urlCV String

  photo Photo?
  educations Education[]
  skills Skill[]
  projects Project[]
  contacts Contact[]
}

model Photo {
  id Int @id @default(autoincrement())
  title String
  sice Int
  url String

  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

model Education {
  id Int @id @default(autoincrement())
  place String
  name String
  startDate DateTime
  endDate DateTime?
  description String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Skill {
  id Int @id @default(autoincrement())
  name String
  category String
  icon String

  user User @relation(fields: [userId], references: [id])
  userId Int

  projects SkillProject[]
}

model Project {
  id Int @id @default(autoincrement())
  title String
  startDate DateTime
  endDate DateTime?
  description String

  user User @relation(fields: [userId], references: [id])
  userId Int

  images ImgProject[]
  skills SkillProject[]
}

model ImgProject {
  id Int @id @default(autoincrement())
  url String
  filename String
  size Int
  mimeType String
  order Int @default(0)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int

  createdAt DateTime @default(now())

  @@index([projectId])
}

model SkillProject {
  skillId Int
  projectId Int

  skill Skill @relation(fields: [skillId], references: [id])
  project Project @relation(fields: [projectId], references: [id])

  @@id([skillId, projectId])
}

model Contact {
  id Int @id @default(autoincrement())
  name String
  icon String
  url String

  user User @relation(fields: [userId], references: [id])
  userId Int
}
